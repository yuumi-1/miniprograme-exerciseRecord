<view class="page">
  <!-- 顶部日期和单位选择器 -->
  <view class="header-section">
    <view class="header-item">
      <text class="header-label">日期</text>
      <picker mode="date" value="{{date}}" bindchange="bindDateChange">
        <view class="picker-value">{{date}}</view>
      </picker>
    </view>
    <view class="header-item">
      <text class="header-label">重量单位</text>
      <picker mode="selector" value="{{unitIndex}}" bindchange="bindUnitChange" range="{{units}}">
        <view class="picker-value">{{units[unitIndex]}}</view>
      </picker>
    </view>
  </view>

  <!-- 锻炼项目列表 -->
  <view class="workout-list">
    <!-- 深蹲 -->
    <view class="workout-item">
      <view class="workout-title">Squat</view>
      <view class="sets-container">
        <view class="set-item" wx:for="{{squatSets}}" wx:key="index">
          <input type="number" placeholder="重量" 
                 value="{{item.weight}}" 
                 bindinput="bindSquatWeightChange" 
                 data-index="{{index}}"/>
          <text class="unit-text">{{units[unitIndex]}}</text>
          <input type="number" placeholder="次数" 
                 value="{{item.reps}}" 
                 bindinput="bindSquatRepsChange" 
                 data-index="{{index}}"/>
          <text>次</text>
          <icon type="cancel" size="20" color="red" wx:if="{{index > 0}}" bindtap="deleteSet" data-type="squat" data-index="{{index}}">
          </icon>
        </view>
        <button class="add-set-btn" bindtap="addSet" data-type="squat">
          添加组
        </button>
      </view>
    </view>

    <!-- 硬拉 -->
    <view class="workout-item">
      <view class="workout-title">Deadlift</view>
      <view class="sets-container">
        <view class="set-item" wx:for="{{deadliftSets}}" wx:key="index">
          <input type="number" placeholder="重量" 
                 value="{{item.weight}}" 
                 bindinput="bindDeadliftWeightChange" 
                 data-index="{{index}}"/>
          <text class="unit-text">{{units[unitIndex]}}</text>
          <input type="number" placeholder="次数" 
                 value="{{item.reps}}" 
                 bindinput="bindDeadliftRepsChange" 
                 data-index="{{index}}"/>
          <text>次</text>
          <icon type="cancel" size="20" color="red" wx:if="{{index > 0}}" bindtap="deleteSet" data-type="deadlift" data-index="{{index}}">
          </icon>
        </view>
        <button class="add-set-btn" bindtap="addSet" data-type="deadlift">
          添加组
        </button>
      </view>
    </view>

    <!-- 卧推 -->
    <view class="workout-item">
      <view class="workout-title">Benchpress</view>
      <view class="sets-container">
        <view class="set-item" wx:for="{{benchpressSets}}" wx:key="index">
          <input type="number" placeholder="重量" 
                 value="{{item.weight}}" 
                 bindinput="bindBenchpressWeightChange" 
                 data-index="{{index}}"/>
          <text class="unit-text">{{units[unitIndex]}}</text>
          <input type="number" placeholder="次数" 
                 value="{{item.reps}}" 
                 bindinput="bindBenchpressRepsChange" 
                 data-index="{{index}}"/>
          <text>次</text>
          <icon type="cancel" size="20" color="red" wx:if="{{index > 0}}" bindtap="deleteSet" data-type="benchpress" data-index="{{index}}">
          </icon>
        </view>
        <button class="add-set-btn" bindtap="addSet" data-type="benchpress">
          添加组
        </button>
      </view>
    </view>
  </view>

  <!-- 底部保存按钮 -->
  <view class="save-button-container">
    <button class="save-button" bindtap="saveAndBack">
      保存
    </button>
  </view>
</view>    