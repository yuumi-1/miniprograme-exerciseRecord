.page {
  display: flex;
  flex-direction: column;
  background: #F5F7FA;
  padding:0 24rpx;
  height: 100vh;
}

/* 顶部区域 */
.header {
display: flex;
justify-content: space-between;
margin: 12px 0;
}

.header-item {
flex: 1;
margin: 4px 2px;
}

.label {
font-size: 28rpx;
color: #666;
margin-bottom: 12rpx;
display: block;
}

.picker {
background: #fff;
padding: 20rpx;
border-radius: 16rpx;
font-size: 32rpx;
box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

/* 锻炼项目 */
.workout-list {
  flex: 1;
  margin-bottom: 500rpx; /* 为底部按钮留出空间 */
  border-radius: 16rpx;
}

.workout-item {
background: #fff;
border-radius: 12rpx;
margin-bottom: 16rpx;
padding: 16rpx;
box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.workout-title {
display: flex;
justify-content: space-between;
font-size: 36rpx;
font-weight: bold;
margin-bottom: 20rpx;
color: #000000;
padding: 0 16rpx;
align-items: center;
}
.customed-title {
display: flex;              /* 开启 flex 布局 */
align-items: center;        /* 垂直居中对齐子元素 */
justify-content: space-between; /* 子元素两端对齐，中间留空 */
padding: 0 16rpx;
margin-bottom: 8px;

}

.sets-container {
display: flex;
flex-direction: column;
}

.set-item {
display: flex;
align-items: center;
margin-bottom: 15rpx;
}

.set-item input {
flex: 1;
padding: 15rpx;
border: 1rpx solid #eee;
border-radius: 8rpx;
margin-right: 15rpx;
font-size: 30rpx;
}

.unit-text {
font-size: 30rpx;
margin-right: 15rpx;
min-width: 30rpx;
text-align: center;
}

.delete-btn {
width: 5rpx;
}

.add-set-btn {
width: 100%;
padding: 15rpx 0;
text-align: center;
color: #000000;
border: 1rpx dashed #000000;
border-radius: 8rpx;
font-size: 30rpx;
margin-top: 10rpx;
}

/* 底部按钮 */
.save-button-bottom {
padding: 32rpx;
}

.save-button {
display: flex;
width: 100%;
height: 90rpx;
background-color: #007aff;
color: white;
border-radius: 45rpx;
font-size: 32rpx;
align-items: center;
justify-content: center;
box-shadow: 0 4rpx 16rpx rgba(0, 122, 255, 0.3); /* 添加阴影增强视觉效果 */
}
.back-btn {
position: fixed;
display: flex;
align-items: center;
justify-content: center;
z-index: 999;
padding: 0 10rpx;
}
.picker-exercise-item {
margin: 0 60rpx;
}

.save-button-small{
position: fixed;
bottom: 35%;
right: 32rpx;
}

.right-group {
margin-left: auto; /* 关键属性，推至最右侧 */
display: flex; /* B和C水平排列 */
gap: 20rpx; /* 间距 */
}

.pin-button {
padding: 8rpx;
margin: 0 10rpx;
display: flex;
align-items: center;
justify-content: center;
}
.custom-popup {
position: fixed;
left: 0;
right: 0;
bottom: 0;
height: 75vh; /* 占据页面80%高度，可调整 */
max-height: 800rpx; /* 最大高度限制 */
border-top-left-radius: 16rpx;
border-top-right-radius: 16rpx;
background-color: #fff;
z-index: 1000;
display: flex;
flex-direction: column;
}
.popup-content {
flex: 1;
padding: 0;
}
.input-row {
display: flex;
flex-direction: column;
padding: 20rpx;
}


/* 日期和体重输入行布局 */
.input-row {
display: flex;
flex-direction: column;
padding: 20rpx;
}

.date-cell, .weight-cell {
margin-bottom: 20rpx;
padding: 0;
}

.weight-cell .cell-right {
flex: 1;
padding: 0;
}

/* 输入框样式 */
.input-container {
display: flex;
align-items: center;
width: 100%;
}

.weight-input {
flex: 1;
height: 88rpx;
font-size: 32rpx;
text-align: right;
padding-right: 20rpx;
}

.action-buttons {
display: flex;
align-items: center;
margin-left: 10rpx;
}


/* 底部按钮样式 */
.popup-footer {
display: flex;
padding: 30rpx 40rpx;
background-color: #f5f5f5;
border-top: 1rpx solid #eee;
}

.cancel-btn, .confirm-btn {
flex: 1;
margin: 0 20rpx;
height: 88rpx;
line-height: 88rpx;
border-radius: 44rpx;
font-size: 32rpx;
}

.cancel-btn {
color: #666;
background-color: #fff;
border: 1rpx solid #ddd;
}

.confirm-btn {
color: #fff;
background-color: #37a2da;
}
.popblock {
width: 100vw;
height: 240px;
background: var(--td-bg-color-container);
border-top-left-radius: 16rpx;
border-top-right-radius: 16rpx;
}

.header {
display: flex;
align-items: center;
}

.poptitle {
flex: 1;
text-align: center;
font-weight: 600;
font-size: 36rpx;
color: var(--td-text-color-primary);
}

.btn {
font-size: 32rpx;
padding: 32rpx;
}

.btn--cancel {
color: var(--td-text-color-secondary);
}

.btn--confirm {
color: #0052d9;
}
.block {
  color: var(--td-text-color-secondary);
  width: 100%;
  height: 100%;
}
.option{
  font-size: 36rpx;
  padding: 4px;
}

.customExercise-button {
  display: flex;
  justify-content: center;
  font-size: 26rpx;
  color: #666;
  padding: 0 40rpx;
  margin: 10px;
}

.underline {
  text-decoration: underline;
  color: #0052d9; /* 微信绿，可根据需要修改 */
}