/* 红点指示器 */
.record-dot {
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  background-color: #ff4444;
  border-radius: 50%;
  top: 120rpx; /* 根据单元格高度计算得出 */
  right: 45rpx;
  z-index: 3;
}

.has-record {
  background-color: #E6E6FA;
  border-radius: 32rpx;
}
/* 训练日标签 */
.record-text {
    color: #CC3366   ;
    font-weight: bold;
    width: 90%;
    font-size: 26rpx;
    margin-top: 4rpx;
    z-index: 2;
    position: relative;
    font-weight: 500;
    text-align: center;
    background-color: #E6E6FA	;
}

/* 保持空单元格对齐 */
.day.empty {
  visibility: hidden; /* 改用visibility保持布局 */
}


/* 按钮容器定位 */
.edit-button-container {
  position: absolute;
  top: 16rpx;
  right: 24rpx;
  z-index: 10;
}

/* 按钮样式优化 */
.edit-button {
  padding: 8rpx 24rpx !important;
  border-radius: 1rpx !important;
  box-shadow: 0 2rpx 14rpx rgba(24, 144, 255, 0.2);
  transition: all 0.3s ease;
  align-items: center;
  display: flex;
  flex-direction: row !important;       /* 强制横向排列 */
  align-items: center !important;       /* 垂直居中 */
}

.button-close {
  margin: 32rpx 0 0 0;
}


.auto-size-popup {
  position: relative;
  min-width: 70vw;  /* 最小宽度 */
  max-width: 95vw;    /* 最大宽度 */
  min-height: 200rpx; /* 最小高度 */
  max-height: 80vh;   /* 最大高度 */
  padding: 32rpx;
  background: #fff;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
}

.set-info {
  padding: 24rpx;
  font-size: 30rpx;
  color: #666;
}

.exercise-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  padding: 12rpx;
  border-bottom: 1rpx solid #eee;
}