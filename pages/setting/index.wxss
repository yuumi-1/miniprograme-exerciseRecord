
.setting-page {
  background-color: #f5f5f5;
  min-height: 100vh;
}
.block {
  color: var(--td-text-color-secondary);
  width: 100%;
  height: 100%;
}

.header {
  display: flex;
  align-items: center;
  height: 116rpx;
}

.title {
  flex: 1;
  text-align: center;
  font-weight: 600;
  font-size: 36rpx;
  color: var(--td-text-color-primary);
}

.btn {
  font-size: 32rpx;
  padding: 32rpx;
}

.btn--cancel {
  color: var(--td-text-color-secondary);
}

.btn--confirm {
  color: #0052d9;
}


.my-info {
  border-radius: 24rpx;
  margin: 16rpx 0rpx;
}

.card-title {
padding: 16rpx;
font-size: 32rpx;
font-weight: bold;
}
.popup-item {
  display: block;
  padding: 20rpx 32rpx;
  line-height: 1.5;
  border-bottom: 1rpx solid #f0f0f0; /* 分隔线 */
}
.set-info {
  padding: 24rpx;
  font-size: 30rpx;
  color: #666;
}