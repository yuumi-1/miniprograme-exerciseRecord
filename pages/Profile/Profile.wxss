.profile-container {
  padding: 30rpx 20rpx;
  background-color: #f8f8f8;
}

.info-card {
  background: linear-gradient(135deg, #2196F3 0%, #1E88E5 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-id, .joined-date {
  font-size: 32rpx;
  padding: 20rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.one-rm-cards {
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  padding: 20rpx 60rpx;
  margin-bottom: 15rpx;
  display: flex;
  align-items: center;
}

.card {
  background-color: white;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  flex-shrink: 0;
}

.card-title {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 10rpx;
  margin-right: auto;
}

.card-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.card-change {
  font-size: 24rpx;
}

.up {
  color: #e53935;
}

.down {
  color: #43a047;
}

.chart-container {
  background-color: white;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.chart-title {
  display: flex;
  justify-content: flex-end;
  font-size: 26rpx;
  color: #666;
  padding: 0 40rpx;
  margin-bottom: 0rpx;
}

ec-canvas {
  width: 100%;
  height: 400rpx;
}

deleteIcon {
  position: relative;
  left: 50%;
}