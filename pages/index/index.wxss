/**index.wxss**/
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  padding: 80rpx 0;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 600rpx;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.add-btn {
  display: flex;
  width: 100%;
  height: 90rpx;
  background-color: #007aff;
  color: white;
  border-radius: 45rpx;
  font-size: 32rpx;
  align-items: center;
  justify-content: center;
}

.records-list {
  height: auto; 
  overflow-y: auto; 
  padding-bottom: 100rpx; 
}
/* 每条记录的卡片样式 */
.record-card {
  margin: 20rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}
.record-item {
  background-color: white;
  border-radius: 12rpx;
  margin: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.date {
  font-size: 33rpx;
  font-weight: bold;
}

.unit {
  font-size: 24rpx;
  color: #666;
}

.record-content {
  display: grid;
  margin-bottom: 15rpx;
}

.exercise-item {
  display: flex;
  flex-direction:row;
  flex-wrap:nowrap;
  align-items: center;
  background-color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}
.exercise-item .weight {
  padding: 10rpx 16rpx;
  font-size: 26rpx;
  text-align: center;
  color: #007aff;
}
.exercise-group {
  padding: 16rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
}
.record-footer {
  text-align: right;
}

.time {
  font-size: 22rpx;
  color: #999;
}    

.home-content {
  height: 100%; 
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.content-wrapper{
  flex: 1;
  overflow: auto;
}

.record-item {
  border: 1px solid #ccc;
  padding: 10px;
  margin-bottom: 10px;
}

.add-button {
  width: 50px;
  height: 50px;
  background-color: #007aff;
  border-radius: 50%;
  text-align: center;
  line-height: 50px;
  color: white;
  font-size: 32rpx;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
}

.bottom-nav {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: white;
  padding: 10px 0;
  position: relative;
  bottom: 0;
  width: 100%;
  height: 60px;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.nav-text {
  font-size: 24rpx;
  color: #666;
}

.load-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 28rpx;
}
