/**index.wxss**/
.container {
  padding: 20rpx;
  overflow: auto;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  padding: 20rpx 0;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 600rpx;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.add-btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #007aff;
  color: white;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.records-list {
  padding-bottom: 50rpx; /* 底部预留空间，避免被 tabBar 遮挡 */
}

.record-item {
  background-color: white;
  border-radius: 20rpx;
  margin-bottom: 50rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.date {
  font-size: 33rpx;
  font-weight: bold;
}

.unit {
  font-size: 24rpx;
  color: #666;
}

.record-content {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 15rpx;
  margin-bottom: 15rpx;
}

.exercise-item {
  display: flex;
  flex-direction:row;
  flex-wrap:nowrap;
  align-items: center;
}

.exercise-item .weight {
  font-weight: bold;
  color: #007aff;
}

.record-footer {
  text-align: right;
}

.time {
  font-size: 22rpx;
  color: #999;
}    
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.home-content {
  flex: 1;
  padding: 20px;
}

.record-item {
  border: 1px solid #ccc;
  padding: 10px;
  margin-bottom: 10px;
}

.add-button {
  width: 50px;
  height: 50px;
  z-index: 999; /* 确保按钮在其他元素之上 */
  background-color: #007aff;
  border-radius: 50%;
  text-align: center;
  line-height: 50px;
  color: white;
  font-size: 30px;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
  font-size: 14px;
}

.bottom-nav {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: white;
  padding: 10px 0;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 60px;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
}

.nav-item {
  text-align: center;
}

.nav-text {
  font-size: 18px;
  color: #666;
}